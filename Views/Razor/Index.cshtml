<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>This is Stuff</h1>
  @{
    string[] stuff = new string[] {"Cameron", "Kyle", "Mark", "Stephanie", "Michael"};
    for (int i = 0; i < stuff.Length; i++)
    {
      if (stuff[i].StartsWith("c") || stuff[i].StartsWith("C"))
      {
        <p style="color: red;">@stuff[i]</p>
      } else {
        <p>@stuff[i]</p>
      }
    }
  }
</body>
</html>